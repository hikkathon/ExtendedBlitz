<Window x:Class="ExtendedBlitz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:cmd="clr-namespace:ExtendedBlitz.Infrastructure.Commands"        
        xmlns:vw="clr-namespace:ExtendedBlitz.ViewModels"        
        xmlns:local="clr-namespace:ExtendedBlitz"
        WindowStartupLocation="CenterScreen"
        WindowState="{Binding CurWindowState, Mode=TwoWay}"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Width="800" Height="450" MinWidth="800" MinHeight="450"
        WindowStyle="None">
    <Window.DataContext>
        <vw:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <cmd:CloseApplicationCommand x:Key="CloseApplicationCommand"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Margin="5 0 5 0" Background="White">
            <MenuItem>
                <MenuItem.Icon>
                    <fa5:ImageAwesome Icon="Solid_User" Height="16"/>
                </MenuItem.Icon>
                <MenuItem.Header>
                    <Label Content="Войти"/>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{StaticResource CloseApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О Программе"/>
                <MenuItem Header="Свернуть" Command="{Binding MinimizedWindowCommand}"/>
                <MenuItem Header="Развернуть" Command="{Binding MaximizedWindowCommand}"/>
                <MenuItem Header="Свернуть окно" Command="{Binding NormalWindowCommand}"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <ProgressBar Width="120" Height="14" Value="0"/>
            </StatusBarItem>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <fa5:ImageAwesome Icon="Regular_File" Height="13" Margin="0 0 5 0"/>
                    <TextBlock Text="{Binding Status}"/>                    
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <TabControl Margin="0 5 0 5">
            <TabItem Header="Вкладка 1"></TabItem>
            <TabItem Header="Вкладка 2"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
